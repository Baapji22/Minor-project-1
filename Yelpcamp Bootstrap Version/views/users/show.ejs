<%- include("../partials/header") %>

<div id="usershow" class="container">
	<div class="row text-center">
		<div class= "col-lg-12">
			 <div class="row border-bottom pb-3">
				<div class="col-md-4 my-3 text-center">
					<div class="container ">
					   <img src="<%= user.avatar %>" alt="user profile image" height=250 width=250 class="  rounded-circle" >
					</div>
				</div>
				<div class="col-md-8 py-4 text-center">
					<h1><%= user.firstName + " " + user.lastName %></h1>
					<p><strong class="pl-1"></strong><a href="mailto:<%= user.email %>"><%= user.email %></a></p>
					<p><strong class="pl-1" >Studied At: </strong></p>
					<p><strong class="pl-1">Lives in: </strong></p>
					<p><strong class="pl-1">From: </strong></p>
					<form >
						<div class=" ml-2 float-right">
						  <a href="#">Edit Info</a>
						</div>
					</form>
				</div>
		   </div>
		</div>
	   
		
	   
	    <div id="userpost" class="container col-md-12 m-auto">
		    
		    <div class="row text-center mt-4" id="campground-grid">
             <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
                <div class="card">
                  <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
                  <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                  </div>
                </div>
            </div>
        <% }); %>
      </div>
            
			
                  
				    <%if(campgrounds.length<1){%>
						<p class="text-center m-auto">No post Found</p>	 
					<%}%>
		         
		</div>
    </div>
</div>

<%- include("../partials/footer") %>